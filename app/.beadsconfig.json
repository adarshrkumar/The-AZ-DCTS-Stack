{
  "version": "0.1.0",
  "projectName": "ATSDC Stack",
  "defaultLabels": [
    "bug",
    "feature",
    "enhancement",
    "documentation",
    "testing",
    "refactor"
  ],
  "defaultPriorities": [
    "critical",
    "high",
    "medium",
    "low"
  ],
  "agentSettings": {
    "maxContextTokens": 100000,
    "enableMemoryDecay": true,
    "autoCompaction": true,
    "syncInterval": 300
  },
  "integrations": {
    "git": {
      "enabled": true,
      "autoCommit": false,
      "branchPrefix": "beads/"
    },
    "ci": {
      "enabled": false,
      "provider": "github-actions"
    }
  },
  "taskDefaults": {
    "assignee": "ai-agent",
    "status": "open",
    "type": "task"
  }
}
