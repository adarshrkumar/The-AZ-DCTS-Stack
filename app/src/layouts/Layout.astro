---
/**
 * Base Layout Component
 * Demonstrates proper SCSS architecture:
 * - No <style> tags in this file
 * - All styles imported from external SCSS files
 * - Global styles applied via import in the head
 */

import { siteConfig } from '@/lib/config';

interface Props {
    pageTitle?: string | string[];
    description?: string;
}

let {
    pageTitle,
} = Astro.props;

const {
    description = siteConfig.stackDescription,
} = Astro.props;

if (pageTitle && Array.isArray(pageTitle) && pageTitle.length > 0) {
    pageTitle = pageTitle.join(' | ');
}

const usePageTitle = pageTitle && pageTitle !== '' && pageTitle !== siteConfig.stackName && pageTitle.toLowerCase() !== 'index' && pageTitle.toLowerCase() !== 'home';

const title = usePageTitle ? `${pageTitle} | ${siteConfig.stackName}` : siteConfig.stackName;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="description" content={description} />
        <meta name="generator" content={Astro.generator} />

        <!-- Favicons -->
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

        <!-- PWA manifest -->
        <link rel="manifest" href="/manifest.webmanifest" />

        <title>{title}</title>

        <!-- Global styles imported from external SCSS file -->
        <link rel="stylesheet" href="/src/styles/global.scss" />
    </head>
    <body>
        <slot />
    </body>
</html>
